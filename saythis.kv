#:kivy 1.7.1
<SayThis>:
    orientation: 'vertical'
    button_font_size: '30sp'
    padding: root.width * 0.02, root.height * 0.02
    canvas:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    saywhat_text: saywhat_text
    Label:
        text: 'Say This!'
        size_hint: 1, None
        font_size: '45sp'
        height: self.texture_size[1]
    TextInput:
        id: saywhat_text
        text: 'Hello, world'
        font_size: str(font_slider.value) + 'sp'
    Slider:
        id: font_slider
        orientation: 'horizontal'
        min: 1
        max: 100
        value: 15
        size_hint: 1, None
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: sayit_button.height
        Button:
            id: sayit_button
            text: 'Say it!'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press: root.say_something(saywhat_text.text)
        Button:
            text: 'Clear'
            font_size: root.button_font_size
            size_hint: 1, None
            height: self.texture_size[1] + (2 * root.padding[1])
            on_press: root.clear()
